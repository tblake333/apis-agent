# Probe Application Configuration
# Copy this file to .env and modify as needed

# Database Configuration
# Path to the Firebird database file
PROBE_DB_PATH=/path/to/your/database.fdb
# Database user (default: sysdba)
PROBE_DB_USER=sysdba
# Database password (default: masterkey)
PROBE_DB_PASSWORD=masterkey
# Database charset (default: UTF8)
PROBE_DB_CHARSET=UTF8

# Worker Configuration
# Maximum number of worker threads (default: 10)
PROBE_MAX_WORKERS=10
# Starting position for change intake (default: 1)
PROBE_INTAKE_POSITION=1

# Cloud Sync Configuration
# Cloud API endpoint URL
PROBE_CLOUD_ENDPOINT=https://your-api.example.com/api/changes
# API key for authentication (required for production)
PROBE_CLOUD_API_KEY=your-api-key-here
# Path to local SQLite buffer file for offline resilience
PROBE_BUFFER_PATH=probe_buffer.db
# Enable background retry for failed events (default: true)
PROBE_ENABLE_BACKGROUND_RETRY=true
# Enable cloud sync (set to false for local-only testing)
PROBE_CLOUD_ENABLED=true
